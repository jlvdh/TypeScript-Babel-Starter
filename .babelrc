{
  "presets": [
    ["@babel/preset-env",
    {
      "targets": {
        "node": "12"
      }
    }],
    "@babel/typescript"
  ],
  "plugins": [
    "@babel/proposal-class-properties",
    "@babel/proposal-object-rest-spread"
  ],
  "ignore": [
    "**/__tests__", // ignore the whole test directory
    "**/*.test.js" // ignore test files only
  ],
  "sourceMaps": true
}